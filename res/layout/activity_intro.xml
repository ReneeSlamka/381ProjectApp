<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/androidbg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ece381.Intro" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="60dp"
        android:orientation="horizontal" >
        
        <ImageView
        android:id="@+id/introImg1"
        android:layout_width="450dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:contentDescription="@string/telephone_picture"
        android:src="@drawable/welcometext2" />
        
    </LinearLayout>
    
    <LinearLayout 
	    android:orientation="horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:paddingTop="40dp">
	    
		    <ImageView
		        android:id="@+id/topleftButton"
		        android:layout_width="250dp"
		        android:layout_height="250dp"
		        android:background="@drawable/yellowmod" />

		    <ImageView
		     	android:id="@+id/topRightButton"
		         android:layout_width="250dp"
		        android:layout_height="250dp"
		        android:background="@drawable/bluemod" />
	    
	</LinearLayout>
	
	<LinearLayout 
	    android:orientation="horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:paddingBottom="40dp">
		    
	    	<ImageView
		        android:id="@+id/bottomLeftButton"
		       	android:layout_width="250dp"
		        android:layout_height="250dp"
		        android:background="@drawable/redmod" />
	    	
	    	<ImageView
		        android:id="@+id/bottomRightButton"
		        android:layout_width="250dp"
		        android:layout_height="250dp"
		        android:background="@drawable/greenmod" />
		    
	</LinearLayout> 
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="170dp"
        android:paddingRight="0dp"
        android:paddingTop="20dp" >

        <Button
            android:id="@+id/CreateNewGame"
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:background="@drawable/entercustom"
            android:onClick="goToMainActivity" />
    
    </LinearLayout>

</LinearLayout>